<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.customviews.CustomRomanTextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:background="@color/dark_gray"
        android:gravity="start"
        android:padding="@dimen/_5sdp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7sdp"
            android:background="@color/white_dark"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llTopInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_3sdp">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/payment_status"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvPaymentStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llValidDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_3sdp">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/valid_till_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvValidDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llScheduleDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_3sdp">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/schedule_date"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvScheduleDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llQty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/_3sdp">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/qty_"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvQty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:gravity="start"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFromToDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvFromDateLable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/from_"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        tools:text="From : " />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvFromDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:drawablePadding="@dimen/_2sdp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        tools:text="04-05-2018" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:orientation="horizontal">

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvToDateLable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/to_"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        tools:text="To: " />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvToDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        tools:text="04-05-2018" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_4sdp">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="@string/order"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvOrderDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:drawablePadding="@dimen/_2sdp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        tools:text="04-05-2018" />

                </LinearLayout>

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvReceiptTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@string/upload_bank_receipt"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/ivUploadReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_booking_upload_receipt" />

                <com.customviews.CustomRomanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@string/description_"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:visibility="visible" />

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvDescriptionText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_2sdp"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@string/description_"
                    android:textColor="@color/black_dark"
                    android:textSize="@dimen/_10ssp"
                    android:visibility="visible" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_4sdp">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="Discount Applied : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvDiscountApplied"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:drawablePadding="@dimen/_2sdp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        tools:text="123" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_4sdp">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="Total Payable (After Discount ) : "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvTotalPayableAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:drawablePadding="@dimen/_2sdp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        tools:text="" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/_4sdp">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="Cancellation : "
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvCancelText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:drawablePadding="@dimen/_2sdp"
                        android:gravity="start"
                        android:maxLines="1"
                        android:textColor="@color/red"
                        android:textSize="@dimen/_11ssp"
                        android:visibility="visible"
                        tools:text="" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.customviews.CustomRomanTextView
        android:id="@+id/tvCancelBooking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_bg_red"
        android:gravity="center"
        android:maxLines="1"
        android:padding="@dimen/_8sdp"
        android:singleLine="true"
        android:text="@string/cancel_booking"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="@dimen/_12ssp" />

</LinearLayout>