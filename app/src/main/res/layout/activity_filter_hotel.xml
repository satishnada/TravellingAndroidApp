<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/light_gray3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardMaxElevation="@dimen/_1sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp">

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvPricePerNight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/_8sdp"
                android:gravity="center"
                android:text="Price Per Night"
                android:textColor="@color/black"
                android:textSize="@dimen/_12ssp" />

            <com.customviews.CustomBoldTextView
                android:id="@+id/tvPricePerNightAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:gravity="center"
                android:text="$10,000+"
                android:textColor="@color/app_blue"
                android:textSize="@dimen/_12ssp" />

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvMinPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvPricePerNight"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="Min Price"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_10ssp" />

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvMaxPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tvPricePerNightAmount"
                android:gravity="center"
                android:text="Max Price"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_10ssp" />

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvMinAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMinPrice"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:text="$00"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvMaxAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvMaxPrice"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:text="$10000"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp" />

            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/rangeSeekBar"
                android:layout_width="match_parent"
                app:bar_color="@color/dark_gray"
                app:min_value="0"
                app:max_value="10000"
                app:left_thumb_color="@color/app_blue"
                app:right_thumb_color="@color/app_blue"
                app:bar_highlight_color="@color/app_blue"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_below="@+id/tvMaxAmount"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_3sdp"
        app:cardElevation="@dimen/_1sdp"
        app:cardMaxElevation="@dimen/_1sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:padding="@dimen/_10sdp">

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="List"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvAccomodation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvList"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="Accommodation"
                    android:textColor="@color/app_blue"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <View
                android:id="@+id/ListDivider"
                android:layout_width="match_parent"
                android:background="@color/light_gray2"
                android:layout_height="0.5dp"/>

            <RelativeLayout
                android:id="@+id/rlCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Category"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvHotelCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvCategory"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="Hotel"
                    android:textColor="@color/app_blue"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <View
                android:id="@+id/CategoryDivider"
                android:layout_width="match_parent"
                android:background="@color/light_gray2"
                android:layout_height="0.5dp"/>

            <RelativeLayout
                android:id="@+id/rlSubCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_10sdp">

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvSubCategory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center"
                    android:text="Sub Category"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvSubCategoryTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvSubCategory"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:gravity="center"
                    android:text="Villa"
                    android:textColor="@color/app_blue"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.customviews.CustomRomanTextView
            android:id="@+id/tvApplyFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_corner_app_blue_rect"
            android:gravity="center"
            android:padding="@dimen/_10sdp"
            android:textAllCaps="true"
            android:text="APPLY FILTERS"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </RelativeLayout>

</LinearLayout>