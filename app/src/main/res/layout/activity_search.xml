<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center|top"
                android:layout_marginTop="@dimen/_40sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llCoupon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:gravity="start"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/_10ssp" />

                    <com.customviews.CustomRomanEditText
                        android:id="@+id/edtCouponName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/edit_text_blue_bg"
                        android:hint="@string/enter_name"
                        android:maxLength="20"
                        android:maxLines="1"
                        android:gravity="start"
                        android:inputType="textPersonName"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="@dimen/_8ssp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/checkBoxTickets"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/_20sdp"
                            android:textColor="@color/white"
                            android:gravity="start|center"
                            android:text="@string/tickets"/>

                        <CheckBox
                            android:id="@+id/checkBoxCoupons"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:gravity="start|center"
                            android:text="@string/coupons"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/location"
                        android:gravity="start"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanEditText
                        android:id="@+id/edtLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/edit_text_blue_bg"
                        android:hint="@string/enter_address"
                        android:maxLength="200"
                        android:maxLines="1"
                        android:gravity="start"
                        android:inputType="textPostalAddress"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llScheduleDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/schedule_date"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvScheduleDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/edit_text_blue_bg"
                        android:hint="@string/select_chech_in_date"
                        android:gravity="start"
                        android:inputType="date"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/rlCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical">

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvCategoryTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/category"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/_11ssp" />

                    <Spinner
                        android:id="@+id/spinnerCategory"
                        android:layout_width="match_parent"
                        android:visibility="invisible"
                        android:gravity="start"
                        android:layout_below="@+id/tvCategoryTitle"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp">

                    </Spinner>

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvCategoryTitle"
                        android:drawableEnd="@drawable/ic_down_arrow"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/edit_text_blue_bg"
                        android:hint="@string/select_category"
                        android:inputType="text"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:text=""
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="@dimen/_9ssp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlSubCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:visibility="visible"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical">

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvSubCategoryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:text="@string/sub_category"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/_11ssp" />

                    <Spinner
                        android:id="@+id/spinnerSubCategory"
                        android:layout_width="match_parent"
                        android:visibility="invisible"
                        android:gravity="start"
                        android:layout_below="@+id/tvSubCategoryName"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp">

                    </Spinner>

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvSubCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvSubCategoryName"
                        android:drawableEnd="@drawable/ic_down_arrow"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/edit_text_blue_bg"
                        android:hint="@string/select_sub_category"
                        android:inputType="text"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:text=""
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textColorHint="@color/dark_blue"
                        android:textSize="@dimen/_9ssp" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/llCheckIn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:visibility="gone"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/check_in"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvCheckInDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/edit_text_blue_bg"
                        android:hint="@string/select_chech_in_date"
                        android:inputType="date"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textColorHint="@color/app_blue2"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCheckOut"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="vertical">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/check_out"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvCheckOutDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:background="@drawable/edit_text_blue_bg"
                        android:inputType="date"
                        android:hint="@string/select_check_out_date"
                        android:paddingBottom="@dimen/_6sdp"
                        android:paddingTop="@dimen/_6sdp"
                        android:text=""
                        android:gravity="start"
                        android:textColor="@color/white"
                        android:textColorHint="@color/app_blue2"
                        android:textSize="@dimen/_9ssp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRoom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:visibility="gone"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.customviews.CustomRomanTextView
                            android:id="@+id/tvNumberOfRoom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/room"
                            android:textColor="@color/app_blue"
                            android:textSize="@dimen/_11ssp" />

                        <com.customviews.CustomRomanEditText
                            android:id="@+id/edtNumberOfRoom"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@drawable/edit_text_blue_bg"
                            android:hint="@string/enter_number_of_room"
                            android:maxLength="5"
                            android:gravity="start"
                            android:inputType="number"
                            android:paddingBottom="@dimen/_6sdp"
                            android:paddingTop="@dimen/_6sdp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textColorHint="@color/app_blue2"
                            android:textSize="@dimen/_9ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/select_member"
                            android:textColor="@color/app_blue"
                            android:textSize="@dimen/_11ssp" />

                        <com.customviews.CustomRomanEditText
                            android:id="@+id/edtNumberMember"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@drawable/edit_text_blue_bg"
                            android:hint="@string/enter_number_of_member"
                            android:maxLength="5"
                            android:inputType="number"
                            android:paddingBottom="@dimen/_6sdp"
                            android:paddingTop="@dimen/_6sdp"
                            android:text=""
                            android:textColor="@color/white"
                            android:textColorHint="@color/app_blue2"
                            android:textSize="@dimen/_9ssp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/btn_corner_app_blue_rect"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/search"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_11ssp" />

    </RelativeLayout>

</RelativeLayout>