<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_8sdp"
                    app:cardMaxElevation="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/_20sdp">

                        <ImageView
                            android:layout_width="@dimen/_150sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:src="@drawable/ic_thank_you" />

                        <com.customviews.CustomRomanTextView
                            android:id="@+id/tvHotelName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:gravity="center"
                            android:text="Thank You"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18ssp" />

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center"
                            android:text="Your booking is confirm now"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_12ssp" />

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:gravity="center"
                            android:text="@string/confirm"
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_10ssp" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_8sdp"
                    app:cardMaxElevation="@dimen/_8sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.customviews.CustomRomanTextView
                            android:id="@+id/tvDetail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:text="Booking Details"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14ssp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/light_gray" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:minWidth="@dimen/_120sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="Booking ID"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:gravity="start"
                                android:text="B054656"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:minWidth="@dimen/_120sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="Booked"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:gravity="start"
                                android:text="Vacation House"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:minWidth="@dimen/_120sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="Booking Amount"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:gravity="start"
                                android:text="3244.00 SR"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:minWidth="@dimen/_120sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="Booking Date"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:gravity="start"
                                android:text="10 Jul 2018 08:38 AM"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:minWidth="@dimen/_120sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="Payer Name"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:gravity="start"
                                android:text="Smith Patel"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="start"
                                android:minWidth="@dimen/_120sdp"
                                android:padding="@dimen/_5sdp"
                                android:text="Emial"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text=":"
                                android:textColor="@color/app_blue"
                                android:textSize="@dimen/_12ssp" />

                            <com.customviews.CustomRomanTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_8sdp"
                                android:layout_marginStart="@dimen/_8sdp"
                                android:gravity="start"
                                android:text="smithpatel45@ymail.com"
                                android:textColor="@color/dark_gray"
                                android:textSize="@dimen/_12ssp" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:cardCornerRadius="@dimen/_3sdp"
                    app:cardElevation="@dimen/_8sdp"
                    app:cardMaxElevation="@dimen/_8sdp">

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvCheckMail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/check_email"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10ssp" />

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_corner_app_blue_rect"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/_10sdp">

        <com.customviews.CustomRomanTextView
            android:id="@+id/tvPrintDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="HOME"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>

</LinearLayout>