<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_8sdp"
    app:cardElevation="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlImage"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="@dimen/_95sdp">

            <ImageView
                android:id="@+id/ivOrder"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_90sdp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_placeholder_top" />

            <com.customviews.CustomBoldTextView
                android:id="@+id/tvOrderId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:paddingTop="@dimen/_4sdp"
                android:paddingBottom="@dimen/_4sdp"
                android:background="@drawable/gradian_item_shadow"
                android:gravity="center"
                android:text="Order ID:FLW40"
                android:textColor="@color/white"
                android:textSize="@dimen/_8ssp"
                android:visibility="visible" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llOrderInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/rlImage"
            android:orientation="vertical">

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvOrderTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="@dimen/_5sdp"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:visibility="visible" />

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvPaymentMethod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_marginStart="@dimen/_5sdp"
                android:maxLines="1"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_8ssp"
                android:visibility="visible" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/_5sdp"
                android:paddingBottom="@dimen/_2sdp"
                android:paddingTop="@dimen/_2sdp">

                <com.customviews.CustomRomanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:minWidth="@dimen/_25sdp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:text="@string/from_"
                    android:visibility="visible"
                    tools:text="From: " />

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvFromDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/black_dark"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="visible"
                    tools:text="04-05-2018" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_2sdp"
                android:paddingBottom="@dimen/_2sdp">

                <com.customviews.CustomRomanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:minWidth="@dimen/_25sdp"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="visible"
                    android:text="@string/to_" />

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvToDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="visible"
                    tools:text="04-05-2018" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlBottomInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/white1"
                android:padding="@dimen/_8sdp"
                android:orientation="horizontal">

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvOrderDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_alignParentStart="true"
                    android:maxLines="1"
                    android:text="@string/order_"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="visible" />

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvOrderDateFinal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_toEndOf="@+id/tvOrderDate"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="visible"
                    tools:text="04-05-2018" />

                <com.customviews.CustomRomanTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/tvTotalPrice"
                    android:gravity="start"
                    android:maxLines="1"
                    android:text="@string/order_total"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="visible"
                    tools:text="Order Total: " />

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvTotalPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_alignParentEnd="true"
                    android:gravity="start"
                    android:maxLines="1"
                    android:textColor="@color/red_light"
                    android:textSize="@dimen/_8ssp"
                    android:visibility="visible"
                    tools:text="04-05-2018" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
