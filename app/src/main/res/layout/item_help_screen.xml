<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ic_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_search_intro"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:id="@+id/llText"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_105sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_below="@+id/ic_intro"
        android:orientation="vertical">

        <com.customviews.CustomRomanTextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:text="@string/be_inspired"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_12ssp" />

        <com.customviews.CustomRomanTextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_55sdp"
            android:layout_marginBottom="@dimen/_80sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:text="sadfsfd"
            android:gravity="center|top"
            android:textColor="@color/black_dark"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imgHelpImage"
        android:layout_width="match_parent"
        android:layout_below="@+id/llText"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:src="@drawable/intro_first" />

</RelativeLayout>