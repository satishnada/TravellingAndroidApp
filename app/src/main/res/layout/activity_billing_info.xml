<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:background="@color/white"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_8sdp"
                android:text=""
                android:textColor="@color/app_blue"
                android:textSize="@dimen/_12ssp" />

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:text=""
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_12ssp" />

            <LinearLayout
                android:id="@+id/llTopInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:minWidth="@dimen/_120sdp"
                            android:text="@string/from"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <com.customviews.CustomRomanTextView
                            android:id="@+id/tvFromDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:minWidth="@dimen/_120sdp"
                            android:text="@string/adults"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <com.customviews.CustomRomanTextView
                            android:id="@+id/tvAdult"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:background="@color/dark_gray1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/_3sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:minWidth="@dimen/_120sdp"
                            android:text="@string/to"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <com.customviews.CustomRomanTextView
                            android:id="@+id/tvToDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_3sdp">

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:minWidth="@dimen/_120sdp"
                            android:text="@string/kids"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <com.customviews.CustomRomanTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />

                        <com.customviews.CustomRomanTextView
                            android:id="@+id/tvKids"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:text=""
                            android:textColor="@color/dark_gray"
                            android:textSize="@dimen/_11ssp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dark_gray1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvSubTotalText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:minWidth="@dimen/_190sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/sub_total"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvSubTotal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dark_gray1" />

                <LinearLayout
                    android:id="@+id/llAddons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/addons_included"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text=":"
                        android:textColor="@color/app_blue"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvAddonsAvailable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/none"
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerAddons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="none" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dark_gray1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="start"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/total_payable_before_discount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvTotalPayableBefore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/_100sdp"
                        android:layout_alignParentEnd="true"
                        android:gravity="start"
                        android:padding="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dark_gray1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="start"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/discount_applied"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:minWidth="@dimen/_100sdp"
                        android:layout_alignParentEnd="true"
                        android:gravity="start"
                        android:padding="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dark_gray1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="start"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/coupon_amount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvCouponAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/_100sdp"
                        android:layout_alignParentEnd="true"
                        android:gravity="start"
                        android:padding="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dark_gray1" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.customviews.CustomRomanTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:gravity="start"
                        android:padding="@dimen/_10sdp"
                        android:text="@string/total_payable_after_discount"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11ssp" />

                    <com.customviews.CustomRomanTextView
                        android:id="@+id/tvTotalPayableAfter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="@dimen/_100sdp"
                        android:layout_alignParentEnd="true"
                        android:gravity="start"
                        android:padding="@dimen/_10sdp"
                        android:text=""
                        android:textColor="@color/dark_gray"
                        android:textSize="@dimen/_11ssp" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray1" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.customviews.CustomRomanTextView
            android:id="@+id/tvPayViaBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1.3"
            android:background="@drawable/rounded_top_corner_app_purple_rect"
            android:gravity="center"
            android:singleLine="true"
            android:maxLines="1"
            android:padding="@dimen/_8sdp"
            android:text="@string/pay_via_bank"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

        <com.customviews.CustomRomanTextView
            android:id="@+id/tvPayViaCredit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_weight="1"
            android:singleLine="true"
            android:maxLines="1"
            android:background="@drawable/rounded_top_corner_app_purple_rect"
            android:gravity="center"
            android:padding="@dimen/_8sdp"
            android:text="@string/pay_via_credit_card"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>

</LinearLayout>

