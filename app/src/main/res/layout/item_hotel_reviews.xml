<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivReviewProfile"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:src="@drawable/user_placeholder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvReviewTitle"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_gravity="top"
                android:gravity="start"
                android:lines="1"
                android:layout_height="wrap_content"
                android:text="Mareq Korean"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/rattingReview"
                    style="@style/CustomRatingBarMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:numStars="5"
                    android:rating="3.5"
                    android:stepSize="0.5" />

                <com.customviews.CustomRomanTextView
                    android:id="@+id/tvReviewTime"
                    android:layout_width="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:lines="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_gray"
                    android:textSize="@dimen/_8ssp" />

            </LinearLayout>

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvUserReview"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_gravity="top"
                android:gravity="start"
                android:lines="2"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_gray"
                android:textSize="@dimen/_8ssp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_gray2"/>

</LinearLayout>
