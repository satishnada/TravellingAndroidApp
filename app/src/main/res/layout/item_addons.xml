<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <com.customviews.CustomRomanTextView
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_weight="2"
            android:lines="1"
            android:layout_height="wrap_content"
            android:text="@string/addons"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <com.customviews.CustomRomanTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=":"/>

        <com.customviews.CustomRomanTextView
            android:id="@+id/tvAddonsName"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start"
            android:lines="1"
            android:layout_height="wrap_content"
            android:text="@string/addon_name"
            android:textColor="@color/black_dark"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <com.customviews.CustomRomanTextView
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_weight="2"
            android:lines="1"
            android:layout_height="wrap_content"
            android:text="@string/unit_price"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <com.customviews.CustomRomanTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=":"/>

        <com.customviews.CustomRomanTextView
            android:id="@+id/tvUnitPrice"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start"
            android:lines="1"
            android:layout_height="wrap_content"
            android:text="12"
            android:textColor="@color/black_dark"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <com.customviews.CustomRomanTextView
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_gravity="start|center"
            android:gravity="start"
            android:layout_weight="2"
            android:lines="1"
            android:layout_height="wrap_content"
            android:text="@string/qty"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <com.customviews.CustomRomanTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=":"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPlushQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_plush" />

            <com.customviews.CustomRomanTextView
                android:id="@+id/tvKidsQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <ImageView
                android:id="@+id/ivMinusQ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_minus" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">

            <com.customviews.CustomRomanEditText
                android:id="@+id/edtQuantity"
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:inputType="number"
                android:background="@drawable/rounded_edit_text_bg"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_gravity="center"
                android:gravity="start"
                android:lines="1"
                android:maxLength="8"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black_dark"
                android:textSize="@dimen/_10ssp" />

            <com.customviews.CustomRomanTextView
                android:layout_width="match_parent"
                android:ellipsize="end"
                android:singleLine="true"
                android:padding="@dimen/_5sdp"
                android:layout_gravity="start|center"
                android:gravity="start"
                android:layout_weight="1"
                android:visibility="invisible"
                android:lines="1"
                android:layout_height="wrap_content"
                android:text="@string/qty_"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="horizontal">

        <com.customviews.CustomRomanTextView
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_weight="2"
            android:lines="1"
            android:layout_height="wrap_content"
            android:text="@string/subtotal"
            android:textColor="@color/black"
            android:textSize="@dimen/_10ssp" />

        <com.customviews.CustomRomanTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=":"/>

        <com.customviews.CustomRomanTextView
            android:id="@+id/tvSubTotal"
            android:layout_width="match_parent"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="start"
            android:lines="1"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/black_dark"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@color/dark_gray1">

    </View>

</LinearLayout>
